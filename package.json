{
  "name": "nodejs-starter",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js API starter kit",
  "main": "src/app.js",
  "scripts": {
    "start": "sudo docker-compose up -d && sudo docker-compose logs -f",
    "stop": "sudo docker-compose down -v",
    "build": "tsc",
    "watch": "concurrently \"tsc -w\" \"nodemon dist/app.js\"",
    "test": "jest",
    "lint": "tslint -p tsconfig.json"
  },
  "engines": {
    "node": "^8.11"
  },
  "dependencies": {
    "ioredis": "^4.2.0",
    "koa": "^2.6.1",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "mongodb": "^3.1.9",
    "pg": "^7.6.0"
  },
  "devDependencies": {
    "@types/got": "^9.2.0",
    "@types/ioredis": "^4.0.3",
    "@types/jest": "^23.3.9",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.33",
    "@types/mongodb": "^3.1.14",
    "@types/pg": "^7.4.11",
    "concurrently": "^4.0.1",
    "got": "^9.3.1",
    "jest": "^23.6.0",
    "ts-jest": "^23.10.4",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "test\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT"
}
