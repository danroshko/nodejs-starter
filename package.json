{
  "name": "nodejs-starter",
  "version": "0.1.0",
  "private": true,
  "description": "Node.js API starter kit",
  "main": "src/app.js",
  "scripts": {
    "start": "sudo docker-compose up -d && sudo docker-compose logs -f",
    "stop": "sudo docker-compose down -v",
    "build": "tsc",
    "test": "jest",
    "lint": "tslint -p tsconfig.json"
  },
  "engines": {
    "node": "^8.11"
  },
  "dependencies": {
    "ioredis": "^3.2.2",
    "koa": "^2.5.2",
    "koa-body": "^4.0.4",
    "koa-router": "^7.4.0",
    "mongodb": "^3.1.1"
  },
  "devDependencies": {
    "@types/got": "^8.3.3",
    "@types/ioredis": "^3.2.13",
    "@types/jest": "^23.3.1",
    "@types/koa": "^2.0.46",
    "@types/koa-router": "^7.0.31",
    "@types/mongodb": "^3.1.2",
    "got": "^8.3.2",
    "jest": "^23.4.2",
    "ts-jest": "^23.0.1",
    "tslint": "^5.11.0",
    "typescript": "^2.9.2"
  },
  "jest": {
    "testEnvironment": "node",
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "test\\.(js|ts)$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "license": "MIT"
}
